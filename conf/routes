# Routes


# An example controller showing a sample home page
GET     /                                 controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



#INICIAR SESEION EMPRESA
GET     /iniciarSesionEmpresa             controllers.ApplicationEmpresa.home()

#INICIAR SESSION ESTUDIANTE
GET       /iniciarSesionEstudiante       controllers.ApplicationEstudiante.homeEst()

#REGISTRO ESTUDIANTE
GET     /registroEstudiante.scala.html          controllers.ApplicationEstudiante.registroEstudianteGet()
POST     /registroEstudiante.scala.html          controllers.ApplicationEstudiante.registroEstudiantePost()



#REGISTRO EMPRESA
GET     /registroEmpresa.scala.html             controllers.ApplicationEmpresa.registroEmpresaGet()
POST   /registroEmpresa.scala.html             controllers.ApplicationEmpresa.registroEmpresaPost()


#FORMULARIO EMPRESA
GET     /formularioEmpresa.scala.html           controllers.ApplicationEmpresa.crearFormularioEmpresaGet()
POST    /formularioEmpresa.scala.html           controllers.ApplicationEmpresa.crearFormularioEmpresaPost()

#FORMULARIO ESTUDIANTE
GET     /formularioEstudiante.scala.html        controllers.ApplicationEstudiante.crearFormularioEstudianteGet()
POST    /formularioEstudiante.scala.html        controllers.ApplicationEstudiante.crearFormularioEstudiantePost()


#PERFIL ESTUDIANTE
GET     /perfilEstudiante.scala.html            controllers.HomeController.perfilEstudiante()

#PERFIL EMPRESA
#GET     /perfilEmpresa.scala.html            controllers.HomeController.perfilEmpresa()

#OPCIONES
GET     /opciones                               controllers.HomeController.opciones()
GET     /opciones2                              controllers.HomeController.opciones2()

#LISTARFORMULARIOESTUDIANTE
GET     /listarFormularioEstudiante                controllers.ApplicationEstudiante.listarFormularioEstudiante()

#LISTARFORMULARIOEMPRESA
GET     /listaFormularioEmpresa                     controllers.ApplicationEmpresa.listarFormularioEmpresa()

#EDITARFORMULARIOESTUDIANTES
GET     /editarEstudiante/:id                       controllers.ApplicationEstudiante.editarPerfilEstudianteGet(id: Long)
POST    /editarEstudiante/:id                       controllers.ApplicationEstudiante.editarPerfilPost(id: Long)

#EDITARFORMULARIOEMPRESA
GET     /editarEmpresa/:id                          controllers.ApplicationEmpresa.editarPerfilEmpresaGet(id: Long)
POST    /editarEmpresa/:id                          controllers.ApplicationEmpresa.editarPerfilEmpresaPost(id: Long)

# Creacion de usuarios
GET     /SignUp                     controllers.SignUp.create()
POST    /SignUp                     controllers.SignUp.save()


# Manejo de login de sesion Empresa

GET     /ingreso                    controllers.ApplicationEmpresa.home()
POST    /login                      controllers.ApplicationEmpresa.authenticate()
GET     /logout                     controllers.ApplicationEmpresa.logout()

# Manejo de login de sesion Estudiante

GET     /ingresoEst                    controllers.ApplicationEstudiante.homeEst()
POST    /loginEst                      controllers.ApplicationEstudiante.authenticate()
GET     /logoutEst                     controllers.ApplicationEstudiante.logout()

